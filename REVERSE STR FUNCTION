#include <stdio.h>
#include <string.h>
void REVERSE(char str[]);

int main() {
    char str[100];
    
    printf("Enter a string: ");
    scanf("%99s",str);
    REVERSE(str);
    printf("Reversed string: %s\n", str);
    return 0;
}
void REVERSE(char str[]) {
    int length = strlen(str);
    int i, j;
    char temp;
    for (i = 0, j = length - 1; i < j; i++, j--) {
        temp = str[i];
        str[i] = str[j];
        str[j] = temp;
    }
}
