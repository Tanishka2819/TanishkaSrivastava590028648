#include <stdio.h>

void main()
{
 int a;
 int b;
 int c;
 int largest;
 
 printf ("Enter the 1st number \n");
 scanf("%d",&a);
 printf ("Enter the 2nd number \n");
 scanf("%d",&b);
  printf ("Enter the 3rdnumber \n");
 scanf("%d",&c);
 largest = a>b ? ((a>c)?a:c) : ((b>c)?b:c);
 printf ("largest number is :  %d",largest);
   
}
